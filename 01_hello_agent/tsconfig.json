{
    "compilerOptions": {
        "target": "es2022",//ts assumesjs features apto es 2022
        "module": "esnext",//
        "moduleResolution": "bundler",
        "lib": ["ES2022","DOM"],
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true, 
        "skipLibCheck": true,
        "noEmit": true,
        "types": ["node"]
    },
    "include": ["src"] // only files inside the src are checked , without this every files outside and inside will be checked 
}